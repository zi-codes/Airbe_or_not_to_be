<div class="container add-top-margin">

  <div>
    <h1 class="title is-3">Requests you've received</h1>
  </div>

  <div class="columns add-top-margin is-multiline is-centered">



      <% @requests_received.each do |request| %>
      <div class="column box is-narrow">
      <p class="title is-2"><%= Listing.find(request.listing_id).title %></p>
      <p><%= Listing.find(request.listing_id).description %></p>
      <p><%= request.message %></p>
      <p>Status: <%= request.status %></p>

        <% if request.status == "pending" %>
          <%= button_to "Confirm", "/requests/#{request.id}", method: :patch, class: "confirm-button button is-success" %>
        <% end %>


      </div>
      <% end %>


  </div>
</div>
